	<option value="&gt;=">&gt;=</option>
	<option value="&lt;=">&lt;=</option>
	<option value="includes">includes</option></select>
	<input name="value[0]"><br>
</div>

<%= link_to_function(button_tag("Add criteria") , 'add_row()')%><br><br>

